<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPaneTab" prefHeight="611.0" prefWidth="1232.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.application.encryptTab.EncryptTabController">
   <top>
      <ScrollPane fx:id="currentCodeScrollPane" disable="true" minHeight="70.0" minWidth="600.0" prefHeight="93.0" prefWidth="1152.0" BorderPane.alignment="CENTER">
         <content>
            <HBox>
               <children>
                  <Label alignment="CENTER" prefHeight="62.0" prefWidth="173.0" text="Current machine code:" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <fx:include fx:id="codeComponent" source="../generalComponents/SimpleCode/simpleCodeVersion.fxml" />
               </children>
            </HBox>
         </content>
      </ScrollPane>
   </top>
   <bottom>
      <FlowPane prefHeight="95.0" prefWidth="1008.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#testBotton" text="Button" />
                  <Label fx:id="testLabel" text="0">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="comboBoxBf" prefWidth="150.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Task Size" />
                  <TextField fx:id="taskSizeField" />
                  <Button mnemonicParsing="false" onAction="#pauseOperation" text="pause" />
                  <Button mnemonicParsing="false" onAction="#resumeOperation" text="resume" />
               </children>
            </HBox>
         </children>
      </FlowPane>
   </bottom>
   <center>
      <SplitPane fx:id="encryptSplitPane" disable="true" dividerPositions="0.5" prefHeight="423.0" BorderPane.alignment="CENTER">
        <items>
            <ScrollPane maxWidth="-Infinity" minWidth="500.0" prefWidth="620.0">
               <content>
                  <fx:include fx:id="encryptComponent" source="encryptComponent/encryptComponent.fxml" />
               </content>
            </ScrollPane>
            <fx:include fx:id="statisticsComponent" source="statisticsComponent/statisticsCodeComponent.fxml" />
        </items>
      </SplitPane>
   </center>
</BorderPane>
